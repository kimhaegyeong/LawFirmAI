# LawFirmAI 환경 변수 설정 예시
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요

# 기본 설정
DEBUG=false
LOG_LEVEL=INFO

# 데이터베이스 설정
DATABASE_URL=sqlite:///./data/lawfirm.db

# 벡터 저장소 설정
VECTOR_STORE_PATH=./data/embeddings/faiss_index
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# LangGraph 설정
LANGGRAPH_ENABLED=true
LANGGRAPH_CHECKPOINT_DB=./data/checkpoints/langgraph.db

# Ollama 설정
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:3b

# LLM 제공자 (local, openai, google)
LLM_PROVIDER=google

# Google AI 설정 (필수)
GOOGLE_API_KEY=your_google_api_key_here

# Langfuse 설정 (선택사항)
LANGFUSE_ENABLED=false
LANGFUSE_SECRET_KEY=your_langfuse_secret_key_here
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key_here
LANGFUSE_HOST=https://cloud.langfuse.com

# 성능 설정
ENABLE_CACHING=true
CACHE_TTL=3600
ENABLE_ASYNC=true

# 법률 제한 시스템 설정 (개선된 임계값)
# 기본 임계값 (더 관대하게 조정)
RESTRICTION_THRESHOLD_DEFAULT=0.08
ALLOWANCE_THRESHOLD_DEFAULT=0.04

# 허용 키워드가 있을 때의 임계값
RESTRICTION_THRESHOLD_WITH_ALLOWED=0.06
ALLOWANCE_THRESHOLD_WITH_ALLOWED=0.03

# 허용 비율 임계값 (더 관대하게)
ALLOWED_RATIO_HIGH=0.35
ALLOWED_RATIO_LOW=0.15

# 절차 관련 질문 특별 임계값 (매우 관대)
RESTRICTION_THRESHOLD_PROCEDURE=0.03
ALLOWANCE_THRESHOLD_PROCEDURE=0.015

# 경계 심판기 설정 (중립으로 변경)
BOUNDARY_MIN=0.45
BOUNDARY_MAX=0.55
REFEREE_STRICT=0

# 법률 제한 시스템 설정 (개선된 임계값)
# 기본 임계값 (더 관대하게 조정)
RESTRICTION_THRESHOLD_DEFAULT=0.08
ALLOWANCE_THRESHOLD_DEFAULT=0.04

# 허용 키워드가 있을 때의 임계값
RESTRICTION_THRESHOLD_WITH_ALLOWED=0.06
ALLOWANCE_THRESHOLD_WITH_ALLOWED=0.03

# 허용 비율 임계값 (더 관대하게)
ALLOWED_RATIO_HIGH=0.35
ALLOWED_RATIO_LOW=0.15

# 절차 관련 질문 특별 임계값 (매우 관대)
RESTRICTION_THRESHOLD_PROCEDURE=0.03
ALLOWANCE_THRESHOLD_PROCEDURE=0.015

# 경계 심판기 설정 (중립으로 변경)
BOUNDARY_MIN=0.45
BOUNDARY_MAX=0.55
REFEREE_STRICT=0

# 카테고리별 경계 설정
BOUNDARY_MIN_SENSITIVE=0.40
BOUNDARY_MAX_SENSITIVE=0.60
BOUNDARY_MIN_GENERAL=0.35
BOUNDARY_MAX_GENERAL=0.65

# ML 분류기 설정
USE_SIMPLE_CLASSIFIER=0
USE_BERT_CLASSIFIER=1
USE_BOUNDARY_REFEREE=1
USE_LLM_REFEREE=0