# LawFirmAI 환경 변수 설정 예시
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요

# 기본 설정
DEBUG=false
LOG_LEVEL=INFO

# 데이터베이스 설정
DATABASE_URL=sqlite:///./data/lawfirm.db

# 벡터 저장소 설정
VECTOR_STORE_PATH=./data/embeddings/faiss_index
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# LangGraph 설정
LANGGRAPH_ENABLED=true
LANGGRAPH_CHECKPOINT_DB=./data/checkpoints/langgraph.db

# Ollama 설정
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:3b

# LLM 제공자 (local, openai, google)
LLM_PROVIDER=google

# Google AI 설정 (필수)
GOOGLE_API_KEY=your_google_api_key_here

# Langfuse 설정 (선택사항)
LANGFUSE_ENABLED=false
LANGFUSE_SECRET_KEY=your_langfuse_secret_key_here
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key_here
LANGFUSE_HOST=https://cloud.langfuse.com

# 성능 설정
ENABLE_CACHING=true
CACHE_TTL=3600
ENABLE_ASYNC=true
