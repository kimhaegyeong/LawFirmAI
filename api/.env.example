# API 서버 설정
# CORS 설정 - 콤마로 구분된 문자열 형태로 설정
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 디버그 여부
DEBUG=false
ENVIRONMENT=development 

# stream 디버그 여부
DEBUG_STREAM=false

# 로그 레벨
# critical: 가장 심각한 오류만
# error: 오류만
# warning: 경고 이상
# info: 정보 이상 (기본값)
# debug: 모든 로그 (가장 상세)
# trace: uvicorn 전용 (가장 상세)
LOG_LEVEL=info

# HuggingFace 로깅 비활성화
TRANSFORMERS_VERBOSITY=error
HF_HUB_DISABLE_PROGRESS_BARS=1
HF_HUB_DISABLE_EXPERIMENTAL_WARNING=1

# vite
VITE_API_BASE_URL=http://localhost:8000

# LangSmith 활성화
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=LawFirmAI
ENABLE_LANGSMITH=true

# JWT 인증 설정
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars

# OAuth2 Google Authentication
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/oauth2/google/callback

# 익명 사용자 질의 제한 설정
ANONYMOUS_QUOTA_ENABLED=true
ANONYMOUS_QUOTA_LIMIT=3
ANONYMOUS_QUOTA_RESET_HOUR=0

# 검증용 LLM 설정 (선택적)
VALIDATOR_LLM_PROVIDER=google
VALIDATOR_LLM_MODEL=gemini-2.5-flash-lite

# 데이터베이스 설정
# DATABASE_PATH: SQLite 데이터베이스 파일 경로 (절대 경로 또는 상대 경로)
# - 절대 경로 예시: D:\project\LawFirmAI\LawFirmAI\data\lawfirm_v2.db
# - 상대 경로 예시: ./data/lawfirm_v2.db (프로젝트 루트 기준)
DATABASE_PATH=./data/lawfirm_v2.db

# DATABASE_URL: SQLite 연결 URL (DATABASE_PATH가 설정되면 자동 생성되지만 명시적으로 설정 가능)
# - 절대 경로 예시: sqlite:///D:/project/LawFirmAI/LawFirmAI/data/lawfirm_v2.db
# - 상대 경로 예시: sqlite:///./data/lawfirm_v2.db
# 주의: Windows 경로는 백슬래시(\) 대신 슬래시(/)를 사용해야 합니다.
DATABASE_URL=sqlite:///./data/lawfirm_v2.db